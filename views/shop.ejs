<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/adminHeader.ejs') %>
<body>
    <div class="shopContainer">
        <div class="top">
            <div class="left">
                <img src="/HomepageImages/Green Plant and Agriculture Logo.png" alt="">
            </div>
            <div class="right-1">
                    <a href="">SHOP</a>
                    <a href="">SERVICES</a>
                    <a href="">HELP</a>
                    <a href="">ACCOUNT</a>
            </div>
            <div class="right-2">
                <button onclick="showShopRight1tab()" id="openTab"><i class="fa-solid fa-bars"></i></button>
                <button onclick="closeShopRight1tab()" id="closeTab"><i class="fa-solid fa-x"></i></button>
            </div>
        </div>
        <div class="top1">
            <div class="content">
                <div class="content_1">
                    <form action="" method="">
                        <input type="text" name="query" placeholder="Search for products">
                        <button type="submit">Search</button>
                    </form>
                    <div class="cart">
                       <a href="">
                        <i class="fa-solid fa-bag-shopping"></i>
                        <p id="cart-count"><%=cartItemCount %></p>
                       </a>
                    </div>
                </div>
                <div class="content_2">
                    <button onclick="showFeeds()">FEEDS</button>
                    <button onclick="showDrugs()">DRUGS</button>
                    <button onclick="showSeeds()">SEEDS</button>
                    <button onclick="showMachinery()">MACHINERY</button>
                </div>
            </div>
        </div>
        <div class="body">
            <div class="feedsDiv">
                <% Feeds.forEach((Feed)=>{ %>
                    <div class="Feed">
                        <img src="data:image/png;base64,<%=Feed.productImage%>" alt="No image">
                        <p><%=Feed.productName %></p>
                        <p>Kshs. <%=Feed.productPrice %></p>
                        <p><button class="add-to-cart" data-product-id="<%=Feed._id %>" onclick="addToCart('<%=Feed._id %>')">ADD TO CART</button></p>
                    </div>
                    <%}) %>
            </div>
            <div class="drugsDiv">
                <% Drugs.forEach((Drug)=>{ %>
                    <div class="Drug">
                        <img src="data:image/png;base64,<%=Drug.productImage %>" alt="No image">
                        <p><%=Drug.productName %></p>
                        <p>Kshs. <%=Drug.productPrice %></p>
                        <p><button class="add-to-cart" data-product-id="<%=Drug._id %>" onclick="addToCart('<%=Drug._id %>')">ADD TO CART</button></p>
                    </div>
                    <% }) %>
            </div>
            <div class="seedsDiv">
                <% Seeds.forEach((Seed)=>{ %>
                    <div class="Seed">
                        <img src="data:image/png;base64,<%=Seed.productImage %>" alt="No image">
                        <p><%=Seed.productName %></p>
                        <p>Kshs. <%=Seed.productPrice %></p>
                        <p><button class="add-to-cart" data-product-id="<%=Seed._id %>" onclick="addToCart('<%=Seed._id %>')">ADD TO CART</button></p>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <script src="Vanilla.js"></script>
</body>
</html>